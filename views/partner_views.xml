<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_form_add_statement_button" model="ir.ui.view">
            <field name="name">res.partner.form.statement.button</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" name="%(partner_statement_report.action_partner_statement_wizard)d"
                        context="{'default_partner_ids': [active_id]}"
                        icon="fa-file-text-o">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Estado de</span>
                            <span class="o_stat_text">Cuenta</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>

    </data>
</odoo>