<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_whatsapp_statement_wizard_form" model="ir.ui.view">
            <field name="name">whatsapp.statement.wizard.form</field>
            <field name="model">whatsapp.statement.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="alert alert-info" role="alert">
                        <i class="fa fa-info-circle"/> Seleccione una plantilla y verifique el destinatario.
                    </div>
                    <group>
                        <field name="template_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="partner_id" options="{'no_open': True}"/>
                        <field name="contact_id"/>
                        <field name="mobile"/>
                    </group>
                    <group>
                        <field name="message" nolabel="1" placeholder="Mensaje de vista previa..."/>
                    </group>
                    <footer>
                        <button name="action_send_whatsapp_direct" string="Enviar Ahora" type="object" class="btn-primary" icon="fa-whatsapp"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>