<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_statement_wizard_form" model="ir.ui.view">
            <field name="name">partner.statement.wizard.form</field>
            <field name="model">partner.statement.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date_range_option"/>
                            <field name="date_from" attrs="{'invisible': [('date_range_option', '!=', 'custom')]}"/>
                            <field name="date_to" attrs="{'invisible': [('date_range_option', '!=', 'custom')]}"/>
                        </group>
                    </group>
                    <field name="partner_ids" domain="[('customer_rank', '&gt;', 0)]" widget="many2many_tags_avatar" options="{'no_create_edit': True}"/>
                    <footer>
                        <button name="print_report" string="Imprimir PDF" type="object" class="btn-primary"/>
                        <button name="action_review_and_send" string="Enviar Email" type="object" class="btn-secondary"/>
                        <button name="action_send_whatsapp" string="Enviar por WhatsApp" type="object" class="btn-secondary" icon="fa-whatsapp"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_partner_statement_wizard" model="ir.actions.act_window">
            <field name="name">Estado de Cuenta</field>
            <field name="res_model">partner.statement.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="groups_id" eval="[(4, ref('partner_statement_report.group_partner_statement_user'))]"/>
        </record>

    </data>
</odoo>