<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_partner_statement_template">
        <t t-call="web.html_container">
            <t t-foreach="report_data" t-as="data">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        
                        <h2>Estado de Cuenta</h2>

                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Cliente:</strong>
                                <p t-esc="data['partner'].name"/>
                                <address t-field="data['partner'].address_get(['contact'])['contact']" t-options='{"widget": "contact", "fields": ["address", "phone", "email"]}'/>
                            </div>
                            <div class="col-6 text-end">
                                <strong>Fecha del Reporte:</strong> <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/><br/>
                                <strong>Periodo:</strong> de <span t-esc="docs.date_from.strftime('%Y-%m-%d')"/> a <span t-esc="docs.date_to.strftime('%Y-%m-%d')"/>
                            </div>
                        </div>

                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th name="th_date" class="text-start">Fecha</th>
                                    <th name="th_document" class="text-start">Documento</th>
                                    <th name="th_description" class="text-start">Descripci√≥n</th>
                                    <th name="th_debit" class="text-end">Debe</th>
                                    <th name="th_credit" class="text-end">Haber</th>
                                    <th name="th_balance" class="text-end">Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="5"><strong>Saldo Inicial</strong></td>
                                    <td class="text-end">
                                        <span t-esc="data['initial_balance']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    </td>
                                </tr>
                                <t t-foreach="data['lines']" t-as="line">
                                    <tr>
                                        <td><span t-esc="line['date'].strftime('%Y-%m-%d')"/></td>
                                        <td><span t-esc="line['document']"/></td>
                                        <td><span t-esc="line['description']"/></td>
                                        <td class="text-end"><span t-esc="line['debit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                                        <td class="text-end"><span t-esc="line['credit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                                        <td class="text-end"><span t-esc="line['balance']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                                    </tr>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="5" class="text-end"><strong>Saldo Final</strong></td>
                                    <td class="text-end">
                                        <strong>
                                            <span t-esc="data['final_balance']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                        </strong>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                        <div class="row mt32">
                            <div class="col-12">
                                <p>
                                    <t t-if="data['final_balance'] > 0">Saldo adeudado a favor de <span t-esc="company.name"/>.</t>
                                    <t t-if="data['final_balance'] < 0">Saldo a favor del cliente.</t>
                                    <t t-if="data['final_balance'] == 0">No hay saldo pendiente.</t>
                                </p>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>